{
    "id": "org.kde.plasmatube",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "plasmatube",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "youtube-dl",
            "no-autogen": true,
            "no-make-install": true,
            "make-args": ["youtube-dl", "PYTHON=/usr/bin/python3"],
            "post-install": ["install youtube-dl -D /app/bin/youtube-dl"],
            "sources": [{
                "type": "git",
                "url": "https://github.com/rg3/youtube-dl.git",
                "branch": "master"
            }]
        },
        {
            "name": "plasmatube",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}
